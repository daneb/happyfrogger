<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <meta name="description" content="@Model.Description">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article">
    <meta property="og:title" content="@Model.Title">
    <meta property="og:description" content="@Model.Description">
    <meta property="og:url" content="https://danebalia.com/@Model.Slug">
    @if (!string.IsNullOrEmpty(Model.SocialImage))
    {
        <meta property="og:image" content="@Model.SocialImage">
    }
    <meta property="og:site_name" content="Dane Balia">
    <meta property="article:published_time" content="@Model.PublishDate.ToString("yyyy-MM-ddTHH:mm:ssZ")">
    <meta property="article:author" content="Dane Balia">
    <meta property="article:section" content="@Model.Category">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@Model.Title">
    <meta name="twitter:description" content="@Model.Description">
    @if (!string.IsNullOrEmpty(Model.SocialImage))
    {
        <meta name="twitter:image" content="@Model.SocialImage">
    }

    <link rel="stylesheet" href="output.css">
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="feed.xml">
    <style>
        /* You can add custom styles here if needed */
        .prose p {
            margin-bottom: 1em; /* Adjust the value as needed */
        }

        /* Gist styling */
        .gist-container {
            margin: 1.5rem 0;
        }

        .gist .blob-wrapper {
            border-radius: 0.5rem;
        }

        .gist .highlight {
            background: #f8f9fa;
        }

        /* Ensure gists are responsive */
        .gist .gist-file {
            max-width: 100%;
            overflow: auto;
        }

        /* Table of Contents styling */
        .toc {
            background: #f8f9fa;
            border-left: 4px solid #3b82f6;
            padding: 1.5rem;
            margin: 2rem 0;
            border-radius: 0.5rem;
        }

        .toc-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin: 0 0 1rem 0;
            color: #1f2937;
        }

        .toc-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .toc-list li {
            margin: 0.5rem 0;
        }

        .toc-list ul {
            list-style: none;
            padding-left: 1.5rem;
            margin-top: 0.25rem;
        }

        .toc-list a {
            color: #3b82f6;
            text-decoration: none;
            transition: color 0.2s;
        }

        .toc-list a:hover {
            color: #2563eb;
            text-decoration: underline;
        }
    </style>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TT319LL0P6"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-TT319LL0P6');
    </script>
</head>
<body class="bg-gray-50 text-gray-800">
<header class="text-center py-6 bg-white shadow">
    <div class="max-w-4xl mx-auto px-4">
        <div class="flex items-center justify-between mb-4">
            <a href="@(Model.Category).html" class="inline-flex items-center text-gray-600 hover:text-primary-blue">
                <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Back to @(char.ToUpper(Model.Category[0]) + Model.Category.Substring(1))
            </a>
            <a href="index.html" class="text-gray-600 hover:text-primary-blue">
                Home
            </a>
        </div>
        <div class="flex justify-center items-center">
            <h1 class="text-3xl font-bold">@Model.Title</h1>
            @if (Model.Status?.ToLower() == "draft")
            {
             <span class="ml-4 inline-block px-3 py-1 bg-orange-100 text-orange-800 rounded-full text-sm font-medium border border-orange-200">Draft</span>
            }
        </div>
        @if (!string.IsNullOrEmpty(Model.SubCategory))
        {
        <div class="mt-2 text-gray-600">
            Category: @Model.SubCategory
        </div>
        }
        <div class="mt-4 text-gray-500 text-sm flex items-center justify-center gap-4">
            <span>@Model.PublishDate.ToString("MMMM dd, yyyy")</span>
            <span>â€¢</span>
            <span>@Model.ReadingTimeMinutes min read</span>
        </div>
    </div>
</header>
<main class="max-w-4xl mx-auto px-4 py-8">
    <article>
        @if (!string.IsNullOrEmpty(Model.TableOfContents))
        {
            @Raw(Model.TableOfContents)
        }
        <div class="prose prose-blue max-w-none">
            @Raw(Model.Content)
        </div>
    </article>
</main>

<footer class="text-center py-4 bg-white shadow mt-10">
    <p>&copy; @(DateTime.Now.Year) Dane Balia. All rights reserved.</p>
</footer>
</body>
</html>
