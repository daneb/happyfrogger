<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <meta name="description" content="@Model.Description">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article">
    <meta property="og:title" content="@Model.Title">
    <meta property="og:description" content="@Model.Description">
    <meta property="og:url" content="https://danebalia.com/@Model.Slug">
    @if (!string.IsNullOrEmpty(Model.SocialImage))
    {
        <meta property="og:image" content="@Model.SocialImage">
    }
    <meta property="og:site_name" content="Dane Balia">
    <meta property="article:published_time" content="@Model.PublishDate.ToString("yyyy-MM-ddTHH:mm:ssZ")">
    <meta property="article:author" content="Dane Balia">
    <meta property="article:section" content="@Model.Category">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@Model.Title">
    <meta name="twitter:description" content="@Model.Description">
    @if (!string.IsNullOrEmpty(Model.SocialImage))
    {
        <meta name="twitter:image" content="@Model.SocialImage">
    }

    <link rel="stylesheet" href="output.css">
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="feed.xml">
    <style>
        /* You can add custom styles here if needed */
        .prose p {
            margin-bottom: 1em; /* Adjust the value as needed */
        }

        /* Gist styling */
        .gist-container {
            margin: 1.5rem 0;
        }

        .gist .blob-wrapper {
            border-radius: 0.5rem;
        }

        .gist .highlight {
            background: #f8f9fa;
        }

        /* Ensure gists are responsive */
        .gist .gist-file {
            max-width: 100%;
            overflow: auto;
        }

        /* Table of Contents styling */
        .toc {
            background: #f8f9fa;
            border-left: 4px solid #3b82f6;
            padding: 1.5rem;
            margin: 2rem 0;
            border-radius: 0.5rem;
        }

        .toc-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin: 0 0 1rem 0;
            color: #1f2937;
        }

        .toc-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .toc-list li {
            margin: 0.5rem 0;
        }

        .toc-list ul {
            list-style: none;
            padding-left: 1.5rem;
            margin-top: 0.25rem;
        }

        .toc-list a {
            color: #3b82f6;
            text-decoration: none;
            transition: color 0.2s;
        }

        .toc-list a:hover {
            color: #2563eb;
            text-decoration: underline;
        }
    </style>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TT319LL0P6"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-TT319LL0P6');
    </script>
</head>
<body class="bg-gray-50 text-gray-800">
<header class="text-center py-6 bg-white shadow">
    <div class="max-w-4xl mx-auto px-4">
        <div class="flex items-center justify-between mb-4">
            <a href="@(Model.Category).html" class="inline-flex items-center text-gray-600 hover:text-primary-blue">
                <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Back to @(char.ToUpper(Model.Category[0]) + Model.Category.Substring(1))
            </a>
            <a href="index.html" class="text-gray-600 hover:text-primary-blue">
                Home
            </a>
        </div>
        <div class="flex justify-center items-center">
            <h1 class="text-3xl font-bold">@Model.Title</h1>
            @if (Model.Status?.ToLower() == "draft")
            {
             <span class="ml-4 inline-block px-3 py-1 bg-orange-100 text-orange-800 rounded-full text-sm font-medium border border-orange-200">Draft</span>
            }
        </div>
        @if (!string.IsNullOrEmpty(Model.SubCategory))
        {
        <div class="mt-2 text-gray-600">
            Category: @Model.SubCategory
        </div>
        }
        <div class="mt-4 text-gray-500 text-sm flex items-center justify-center gap-4">
            <span>@Model.PublishDate.ToString("MMMM dd, yyyy")</span>
            <span>•</span>
            <span>@Model.ReadingTimeMinutes min read</span>
        </div>
    </div>
</header>
<main class="max-w-4xl mx-auto px-4 py-8">
    <article>
        @if (!string.IsNullOrEmpty(Model.TableOfContents))
        {
            @Raw(Model.TableOfContents)
        }
        <div class="prose prose-blue max-w-none">
            @Raw(Model.Content)
        </div>
    </article>

    @* Chapter Navigation for Book Posts *@
    @if (Model.SubCategory == "book" && (!string.IsNullOrEmpty(Model.PreviousChapter) || !string.IsNullOrEmpty(Model.NextChapter)))
    {
    <div class="mt-12 pt-8 border-t border-gray-200">
        <nav class="flex justify-between items-center">
            @if (!string.IsNullOrEmpty(Model.PreviousChapter))
            {
            <a href="@Model.PreviousChapter" class="flex items-center text-gray-600 hover:text-primary-blue group">
                <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                <div class="text-left">
                    <div class="text-sm text-gray-500">Previous Chapter</div>
                    <div class="font-medium group-hover:text-primary-blue">← Previous</div>
                </div>
            </a>
            }
            else
            {
            <div></div>
            }

            <a href="faith.html" class="text-gray-600 hover:text-primary-blue text-sm">
                <svg class="w-5 h-5 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                All Chapters
            </a>

            @if (!string.IsNullOrEmpty(Model.NextChapter))
            {
            <a href="@Model.NextChapter" class="flex items-center text-gray-600 hover:text-primary-blue group">
                <div class="text-right">
                    <div class="text-sm text-gray-500">Next Chapter</div>
                    <div class="font-medium group-hover:text-primary-blue">Next →</div>
                </div>
                <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
            }
            else
            {
            <div></div>
            }
        </nav>
    </div>
    }

    @* Study Resources Section *@
    @if (Model.StudyResources != null && Model.StudyResources.Any())
    {
    <div class="mt-8 p-6 bg-blue-50 rounded-lg border border-blue-100">
        <h3 class="text-lg font-semibold mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-primary-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Additional Study Resources
        </h3>
        <div class="space-y-3">
            @foreach (var resource in Model.StudyResources)
            {
            <div class="bg-white p-4 rounded border border-blue-200">
                <h4 class="font-medium text-gray-900">@resource.Title</h4>
                <p class="text-sm text-gray-600 mt-1">@resource.Description</p>
            </div>
            }
        </div>
    </div>
    }
</main>

<footer class="text-center py-4 bg-white shadow mt-10">
    <p>&copy; @(DateTime.Now.Year) Dane Balia. All rights reserved.</p>
</footer>
</body>
</html>
