@model HappyFrog.Models.LandingPageModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dane Balia - Digital Garden</title>
    <link rel="stylesheet" href="output.css">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TT319LL0P6"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-TT319LL0P6');
    </script>
</head>
<body class="min-h-screen bg-white">
    <!-- Hero Section -->
    <div class="max-w-content mx-auto px-4 py-12">
        <div class="text-center">
            <img src="images/me.png" alt="Profile Picture" class="w-16 h-16 rounded-full mx-auto mb-6"/>
            <h1 class="text-4xl font-bold mb-4">Welcome to My Digital Garden</h1>
            <p class="text-xl text-gray-600">Exploring technology, faith, and creativity</p>
        </div>

        <!-- New Book Announcement -->
        <div class="bg-blue-50 rounded-lg p-6 max-w-2xl mx-auto mt-6">
            <h2 class="text-2xl font-bold text-blue-700 mb-2">Coming Soon: The Man's Guide to Biblical Truth</h2>
            <p class="text-gray-600 mb-4">A journey through Scripture to equip the everyday man.</p>
            <a href="faith.html" class="inline-block text-blue-600 hover:text-blue-800 font-semibold">
                Read Available Chapters â†’
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-content mx-auto px-4 py-8">

        <!-- Tech Insights Section -->
        <div class="mb-16">
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center space-x-4">
                    <svg class="w-8 h-8 text-primary-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <div>
                        <h2 class="text-2xl font-bold">Tech Insights</h2>
                        <p class="text-gray-600">Deep dives into software development, system design, and leadership.</p>
                    </div>
                </div>
                <a href="tech.html" class="text-primary-blue hover:opacity-80 flex items-center">
                    View All Tech Articles
                    <svg class="w-6 h-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>

            <h3 class="font-bold mb-4 text-crimson">Recent Posts</h3>
            <ul class="space-y-4">
                @if (Model.TechPosts != null && Model.TechPosts.Any())
                {
                    @foreach (var post in Model.TechPosts.Take(3))
                    {
                        <li>
                            <a href="./@post.Slug" class="block hover:opacity-80">
                                <span class="block text-lg">@post.Title</span>
                                <span class="text-gray-500">@post.PublishDate.ToString("MMM dd, yyyy")</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>

        <!-- Faith & Wisdom Section -->
        <div class="mb-16">
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center space-x-4">
                    <svg class="w-8 h-8 text-primary-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    <div>
                        <h2 class="text-2xl font-bold">Faith & Wisdom</h2>
                        <p class="text-gray-600">Explorations in Christian living and my upcoming book.</p>
                    </div>
                </div>
                <a href="faith.html" class="text-primary-blue hover:opacity-80 flex items-center">
                    Explore All Faith Content
                    <svg class="w-6 h-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>

            <h3 class="font-bold mb-4 text-crimson">Recent Posts</h3>
            <ul class="space-y-4">
                @if (Model.FaithPosts != null && Model.FaithPosts.Any())
                {
                    @foreach (var post in Model.FaithPosts.Take(3))
                    {
                        <li>
                            <a href="./@post.Slug" class="block hover:opacity-80">
                                <span class="block text-lg">@post.Title</span>
                                <span class="text-gray-500">@post.PublishDate.ToString("MMM dd, yyyy")</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>

        <!-- Creative Corner Section -->
        <div class="mb-16">
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center space-x-4">
                    <svg class="w-8 h-8 text-primary-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    <div>
                        <h2 class="text-2xl font-bold">Creative Corner</h2>
                        <p class="tex/t-gray-600">A collection of poems, reflections, and personal essays.</p>
                    </div>
                </div>
                <a href="creative.html" class="text-primary-blue hover:opacity-80 flex items-center">
                    Browse All Creative Works
                    <svg class="w-6 h-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>

            <h3 class="font-bold mb-4 text-crimson">Recent Posts</h3>
            <ul class="space-y-4">
                @if (Model.CreativePosts != null && Model.CreativePosts.Any())
                {
                    @foreach (var post in Model.CreativePosts.Take(3))
                    {
                        <li>
                            <a href="./@(post.Slug).html" class="block hover:opacity-80">
                                <span class="block text-lg">@post.Title</span>
                                <span class="text-gray-500">@post.PublishDate.ToString("MMM dd, yyyy")</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>

    <footer class="text-center py-8 text-gray-600">
        <p>&copy; @DateTime.Now.Year Dane Balia. All rights reserved.</p>
    </footer>
</body>
</html>