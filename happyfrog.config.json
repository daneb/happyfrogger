{
  "markdownFilesPath": "../blog/markdownfiles",
  "outputPath": "../blog/",
  "templatesPath": "Templates",
  "site": {
    "title": "HappyFrogger Blog",
    "description": "A lightweight static site generator",
    "author": "Dane Balia",
    "baseUrl": "https://danebalia.com"
  },
  "build": {
    "generateCategoryPages": true,
    "generateLandingPage": true,
    "htmlExtension": ".html",
    "includeDrafts": false,
    "categories": [
      "tech",
      "faith",
      "creative"
    ],
    "rss": {
      "enabled": true,
      "path": "feed.xml",
      "itemCount": 20,
      "fullContent": true
    },
    "sitemap": {
      "enabled": true,
      "path": "sitemap.xml"
    },
    "toc": {
      "enabledByDefault": true,
      "minHeadings": 3,
      "maxLevel": 3,
      "title": "Table of Contents"
    }
  }
}
